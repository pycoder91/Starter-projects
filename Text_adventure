import time
import random

def print_pause(message):
    print(message)
    time.sleep(2)

def intro():
    print_pause("You find yourself standing in a dense forest.")
    print_pause("To your left, you see an old hut.")
    print_pause("To your right, a path leads to a dark cave.")
    print_pause("In front of you, there is a shimmering lake.")
    print_pause("Where would you like to go?")

def hut(items):
    print_pause("You enter the old hut.")
    if "Key" in items:
        print_pause("You've been here before. There's nothing else to find.")
    else:
        print_pause("You find a key hanging on the wall.")
        print_pause("You take the key with you.")
        items.append("Key")
    print_pause("You leave the hut.")
    choose_action(items)

def cave(items):
    print_pause("You cautiously enter the dark cave.")
    if "Sword" in items:
        print_pause("There's nothing more to find here.")
    else:
        print_pause("You discover a sword lying on the ground.")
        print_pause("You pick up the sword.")
        items.append("Sword")
    print_pause("You leave the cave.")
    choose_action(items)

def lake(items):
    print_pause("You approach the shimmering lake.")
    print_pause("The water is clear and you see something shiny at the bottom.")
    if "Amulet" in items:
        print_pause("You've already got the amulet.")
    else:
        print_pause("You dive in and find a magical amulet.")
        print_pause("You take the amulet with you.")
        items.append("Amulet")
    print_pause("You get out of the lake.")
    choose_action(items)

def ending(items):
    print_pause("You feel powerful with your sword and amulet.")
    print_pause("You've unlocked the old hut and discovered hidden treasure.")
    print_pause("You emerge from the forest with the treasure and win the game!")

def choose_action(items):
    print_pause("Where would you like to go now?")
    choice = input("Enter 1 to enter the hut, 2 to go to the cave, 3 to approach the lake: ")
    if choice == "1":
        hut(items)
    elif choice == "2":
        cave(items)
    elif choice == "3":
        lake(items)
    else:
        choose_action(items)

def play_game():
    items = []
    intro()
    choose_action(items)
    ending(items)

if __name__ == "__main__":
    play_game()
